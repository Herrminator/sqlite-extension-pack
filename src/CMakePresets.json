{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "config-base",
            "binaryDir": "${sourceParentDir}/build/${presetName}",
            "installDir": "${sourceParentDir}/Release/${presetName}",
            "generator": "MinGW Makefiles",
            "hidden": true,
            "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows"}
        },
        {
            "name": "x86-release",
            "inherits": "config-base",
            "installDir": "${sourceParentDir}/Release/x86",
            "cacheVariables": {
                "SQLITE3_32": "ON",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "x86-debug",
            "inherits": "x86-release",
            "installDir": "${sourceParentDir}/Debug/x86",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-release",
            "inherits": "x86-release",
            "installDir": "${sourceParentDir}/Release/x64",
            "cacheVariables": {
                "SQLITE3_32": "OFF",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "x64-debug",
            "inherits": "x64-release",
            "installDir": "${sourceParentDir}/Debug/x64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-release-debug",
            "inherits": "x64-debug",
            "installDir": "${sourceParentDir}/Debug/x64-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "linux-base",
            "inherits": "config-base",
            "generator": "Unix Makefiles",
            "installDir": "${sourceParentDir}/Release",
            "hidden": true,
            "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Linux"},
            "cacheVariables": { "SQLITE3_32": "OFF" }
        },
        {
            "name": "linux-release",
            "inherits": "linux-base",
            "cacheVariables": {
                "SQLITE3_32": "OFF",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-debug",
            "inherits": "linux-release",
            "installDir": "${sourceParentDir}/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-release-debug",
            "inherits": "linux-release",
            "installDir": "${sourceParentDir}/Debug/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "msvc-base",
            "inherits": "config-base",
            "generator": "NMake Makefiles",
            "hidden": true
        },
        {
            "name": "msvc-x86-release",
            "inherits": "msvc-base",
            "cacheVariables": {
                "SQLITE3_32": "ON",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "msvc-x86-debug",
            "inherits": "msvc-base",
            "cacheVariables": {
                "SQLITE3_32": "ON",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "msvc-x64-release",
            "inherits": "msvc-base",
            "cacheVariables": {
                "SQLITE3_32": "OFF",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "msvc-x64-debug",
            "inherits": "msvc-base",
            "cacheVariables": {
                "SQLITE3_32": "OFF",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "bcc",
            "binaryDir": "${sourceParentDir}/build/${presetName}",
            "generator": "Borland Makefiles",
            "environment": {
                "CC": "$env{BCC_HOME}\\bin\\bcc32.exe",
                "CXX": "$env{BCC_HOME}\\bin\\bcc32.exe",
                "LIB": "$env{BCC_HOME}\\lib"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows"}
        }
    ],
    "buildPresets": [
        {
            "name": "build-base",
            "jobs": 8,
            "hidden": true
        },
        {
            "name": "debug - x86",
            "inherits": "build-base",
            "configurePreset": "x86-debug"
        },
        {
            "name": "release - x86",
            "inherits": "build-base",
            "configurePreset": "x86-release"
        },
        {
            "name": "debug - x64",
            "inherits": "build-base",
            "configurePreset": "x64-debug"
        },
        {
            "name": "release - x64",
            "inherits": "build-base",
            "configurePreset": "x64-release"
        },
        {
            "name": "release with debug info - x64",
            "inherits": "build-base",
            "configurePreset": "x64-release-debug"
        }
    ],
    "testPresets": [
        {
            "name": "x86-release",
            "configurePreset": "x86-release"
        },
        {
            "name": "x86-debug",
            "configurePreset": "x86-debug"
        },
        {
            "name": "x64-release",
            "configurePreset": "x64-release"
        },
        {
            "name": "x64-debug",
            "configurePreset": "x64-debug"
        },
        {
            "name": "x64-release-debug",
            "configurePreset": "x64-release-debug"
        },
        {
            "name": "msvc-x86-release",
            "configurePreset": "msvc-x86-release"
        },
        {
            "name": "msvc-x86-debug",
            "configurePreset": "msvc-x86-debug"
        },
        {
            "name": "msvc-x64-release",
            "configurePreset": "msvc-x64-release"
        },
        {
            "name": "msvc-x64-debug",
            "configurePreset": "msvc-x64-debug"
        },
        {
            "name": "linux-release",
            "configurePreset": "linux-release"
        },
        {
            "name": "linux-debug",
            "configurePreset": "linux-debug"
        },
        {
            "name": "linux-release-debug",
            "configurePreset": "linux-release-debug"
        }
    ]
}